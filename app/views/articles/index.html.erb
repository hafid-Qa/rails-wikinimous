<div class="h-100 p-3 bg-light border rounded-3 my-3 shadow">
  <h1>Articles</h1>
  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item  pe-1">
        <h2>  <%= link_to article.title, article_path(article), class: "article-link " %></h2>
        <p><%= article.content %></p>
      </li>
    <% end %>
  </ul>
</div>
